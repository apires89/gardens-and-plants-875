<div class="container">
  <div class="row justify-content-center">
    <div class="col-12">
      <h1>Add a Tag to <%= @plant.name %></h1>
      <%= simple_form_for [@plant,@plant_tag] do |f| %>
      <%= f.association :tag, input_html: {multiple: true, data: { controller: "select2"}}, include_hidden: false, include_blank: false  %>
      <%= f.submit "Add Tag", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>




